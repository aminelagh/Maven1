<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="models.Utilisateur" table="utilisateur">
    <id column="id_user" name="id_user" type="int">
      <generator class="native"/>
    </id>
    <property name="nom" not-null="false" type="string"/>
    <property name="prenom" not-null="false" type="string"/>
    <property name="email" not-null="false" type="string"/>
    <property name="password" not-null="false" type="string"/>
  </class>
</hibernate-mapping>
